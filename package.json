{
  "name": "swfc",
  "description": "REST API for Star Wars Force Collection data",
  "version": "0.0.1",
  "private": false,
  "main": "server/app",  
  "scripts": {
    "start": "node ./server/app",
    "dev": "NODE_ENV=dev node ./server/app",
    "lint": "jscs . --reporter=./node_modules/jscs-stylish/jscs-stylish.js",
    "test": "echo \"Error: Repos without tests are bad. Shame. Shame. Shame... \" && exit 0"    
  },
  "keywords": [
    "swfc",
    "star wars",
    "force collection",
    "stats",
    "card battle"
  ],
  "engines": {
    "node": "^0.10.35"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jpero09/swfc"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "body-parser": "1.13.3",
    "bunyan": "1.4.0",
    "bunyan-prettystream": "0.1.3",    
    "chance": "0.7.4",
    "express": "4.11.1",
    "lodash": "3.8.0",
    "morgan": "1.6.1",
    "nconf": "0.7.2",
    "pg": "4.4.1",
    "serve-favicon": "2.3.0",    
    "request": "2.51.0",
    "validate.js": "0.8.0"
  },
  "devDependencies": {
    "mocha": "*",
    "jscs": "2.0.0",
    "jscs-stylish": "^0.3.1",
    "pre-commit": "1.1.1" 
  }
}
